form(action=(user && user.id ? `/users/update` : "/users"), method="POST")
  if user && user.id
    input(type="hidden", name="id", value=user.id)

  .form-group
    label First Name
    input.form-control(name="user[firstName]", required, value=(user ? user.firstName : null))

  .form-group
    label Last Name
    input.form-control(name="user[lastName]", required, value=(user ? user.lastName : null))

  .form-group
    label Email
    input.form-control(name="user[email]", required, value=(user ? user.email : null))

  .form-group
    label Password
    input.form-control(name="user[password]", type="password", required=!(user&&user.id))

  .form-group
    label Password Confirmation
    input.form-control(name="user[passwordConfirmation]", required=!(user&&user.id), type="password")
  
  .form-group
    button.btn.btn-dark(type="submit") Submit